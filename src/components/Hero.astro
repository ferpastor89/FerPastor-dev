---
import ContactIcons from './ContactIcons.astro';
import '../../public/headingNowFonts/HeadingNowTrial-25Medium.ttf'
---

<div id="home" class="group relative bg-black flex flex-wrap justify-around w-full mx-auto">
  <img
    alt="Developer"
    src="/bg-mobile.jpg"
    class="hero-img absolute inset-0 w-full h-full object-cover mx-auto my-auto transition-opacity opacity-50"
  />

  <div class="relative p-12 sm:p-2 lg:p-2">
    <p class=" text-3xl text-white font-bold tracking-wide lg:text-3xl lg:pl-16 pt-12 customfont">
        Hi! I'm
    </p>

    <p class="text-5xl font-bold sm:text-4xl lg:text-6xl lg:pl-16 pt-18">
      <span class=" customfont bg-gradient-to-r text-transparent from-orange-400 via-blue-400 to-green-300 bg-clip-text">
        Fer Pastor
      </span>
    </p>

    <div class="mt-28 sm:mt-48 lg:mt-20 fade-in max-w-screen-lg mx-auto">
      
        <p class="text-xl text-white lg:text-4xl lg:py-16 lg:px-16 customfont pb-10">
          A curious and eclectic <span class="text-3xl sm:text-4xl custom-font font-medium text-blue-400 lg:text-6xl">frontend developer</span>
          with experience in the development of websites and web apps.
        </p>

        <ContactIcons />
        
      </div>
    </div>
  </div>
</div>

<style>

@font-face {
    font-family: 'montserrat';
    src: url('../../public/montserratFonts/Montserrat-Medium.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-size: 2rem;
  }

  .customfont {
    font-family: 'montserrat', sans-serif;
  }

  @keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(1rem);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
.fade-in {
  animation: fadeIn 3s ease-out;
}

</style>
